<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %> <!-- Include head.ejs partial -->

<body>

    <%- include('../partials/nav') %> <!-- Include nav.ejs partial -->

    <div class="blogs content">
        <h2>All Blogs</h2>
        
        <% if(blogs.length > 0){ %>  <!-- Check if blogs array is not empty -->
            <% blogs.forEach(blog => { %>  <!-- Loop through blogs array and display each blog -->
                <a class="single" href="/blogs/<%= blog._id %>">  <!--The id is a changeable parameter-->
                    <h3 class="title"><%= blog.title %></h3>
                    <p class="snippet"><%= blog.snippet %></p>
                </a>
            <% }) %> <!-- End of forEach loop -->
        <% } else { %> <!-- If blogs array is empty -->
            <p>There are no blogs to display...</p>
        <% } %> <!-- End of if statement -->

    </div>

    <%- include('../partials/footer') %> <!-- Include footer.ejs partial -->

</body>
</html>